{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["error", "double", { "allowTemplateLiterals": true }],
        "object-curly-spacing": ["error", "always", { "arraysInObjects": false }],
        "max-len": 0,
        "linebreak-style": 0,
        "require-jsdoc": 0,
        "no-console": ["error"],
        "new-cap": 0,
        "guard-for-in": 0,
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error"
    }
}
